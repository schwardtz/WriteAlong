{
  "manifest_version": 2,

  "name": "WriteAlong",
  "description": "This extension allows to annotate paragraphs on okcupid for in message answering",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "content_scripts": [{
    "matches":["http://www.okcupid.com/messages*"],
    "css":["style.css"],
    "js":["jquery.js", "script.js"],
      "run_at": "document_end"
  }],



  "web_accessible_resources": [
    "jquery-1.10.2.min.map"
],  

  "permissions": [
    "storage"
  ]
}
